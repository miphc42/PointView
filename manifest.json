{
    "manifest_version": 2,
    "name": "PointView SUCKS",
    "description": "Hover over links to see a preview but it SUCKS",
    "version": "1.0.0",
    "icons": {"128": "images/icon_128.png"},
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": ["popup.js"],
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css": [
                "main.css"
            ],
            "js": [
                "inject.js"
            ],
            "run_at":"document_start"
        }
    ],
    "permissions":["activeTab"]

}